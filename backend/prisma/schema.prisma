generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum StatusUser {
  ACTIVE
  NONACTIVE
}

enum Role {
  ADMIN
  USER
}

enum TypeTransaction {
  INCOME
  EXPENSE
}

enum StatusTask {
  PENDING
  PROGRESS
  DONE
}

//npx prisma formaat for clean code
model User {
  id                  Int           @id @default(autoincrement())
  name                String
  email               String        @unique
  password            String
  role                Role          @default(USER)
  status              StatusUser    @default(NONACTIVE)
  activationToken     String?       @unique
  activationExpiredAt DateTime?
  createdAt           DateTime      @default(now())
  updateAt            DateTime      @updatedAt
  transactions        Transaction[]
  tasks               Task[]
}

model Transaction {
  id              Int             @id @default(autoincrement())
  nameTransaction String
  price           Int
  image           String?
  typeTransaction TypeTransaction
  transactionDate DateTime        @default(now())
  createdAt       DateTime        @default(now())
  updateAt        DateTime        @updatedAt
  createdById     Int
  user            User            @relation(fields: [createdById], references: [id])
}

model Task {
  id          Int        @id @default(autoincrement())
  nameTask    String
  image       String?
  startTask   DateTime   @default(now())
  finishTask  DateTime   @default(now())
  statusTask      StatusTask @default(PENDING)
  createdAt   DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  createdById Int
  user        User       @relation(fields: [createdById], references: [id])
}
